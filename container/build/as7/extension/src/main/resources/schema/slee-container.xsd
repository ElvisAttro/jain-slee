<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:telestax:slee-container:3.0"
            xmlns="urn:telestax:slee-container:3.0"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified"
            version="3.0">

    <!-- The subsystem root element -->
    <xs:element name="subsystem" type="subsystemType"/>

    <xs:complexType name="subsystemType">
        <xs:choice minOccurs="0" maxOccurs="unbounded">
            <xs:element name="remote" type="remoteType"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="remoteType">
        <xs:attribute name="rmi-address" type="xs:string" use="required" default="localhost"/>
        <xs:attribute name="rmi-port" type="xs:int" use="required" default="5555"/>
    </xs:complexType>
    
</xs:schema>
